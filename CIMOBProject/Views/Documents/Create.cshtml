@model CIMOBProject.Models.Document

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Novo documento</h1>
<h3 class="description">Preencha os campos em baixo para inserir um novo documento.</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>  <div class="tooltip">(?)<span class="tooltiptext">@ViewData["DescriptionTip"]</span></div>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileUrl" class="control-label"></label>  <div class="tooltip">(?)<span class="tooltiptext">@ViewData["FileURLTip"]</span></div>
                <input asp-for="FileUrl" class="form-control" />
                <span asp-validation-for="FileUrl" class="text-danger"></span>
            </div>
            @Html.Hidden("Id")
            <div class="form-group">
                <input type="submit" value="Adicionar Documento" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
