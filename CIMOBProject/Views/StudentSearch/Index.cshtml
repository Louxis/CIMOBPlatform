@model IEnumerable<CIMOBProject.Models.Student>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StudentNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ApplicationUser.UserFullname)
                </th>

            <th>@Html.DisplayNameFor(model => model.College.CollegeName) </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.UserFullname)
            </td>
            <td>@Html.DisplayFor(modelItem => item.College.CollegeName)</td>

            <td>
                <!--Ou faz-se um botão com a asp-action em que os Details vão ser o perfil do moço que se quer ver
                    Ou faz-se um botão que irá fazer o mesmo c: -->
                <button>Ver Perfil</button>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
