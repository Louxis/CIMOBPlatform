@model CIMOBProject.Models.Quizz

@{
    ViewData["Title"] = "Novo Questionario";
}

<h1>Novo Questionário</h1>
<h3 class="description">Preencha corretamente os campos em baixo para criar um novo questionário.</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="quiz-semester-info">
                <h4>Dados Temporais</h4>
                <div class="form-group">
                    <label asp-for="Year" class="control-label"></label>  <div class="tooltip">(?)<span class="tooltiptext">@ViewData["YearTip"]</span></div>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Semester" class="control-label"></label>  <div class="tooltip">(?)<span class="tooltiptext">@ViewData["SemesterTip"]</span></div>
                    <input asp-for="Semester" class="form-control" />
                    <span asp-validation-for="Semester" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="QuizzUrl" class="control-label"></label>  <div class="tooltip">(?)<span class="tooltiptext">@ViewData["QuizURLTip"]</span></div>
                <input asp-for="QuizzUrl" class="form-control" />
                <span asp-validation-for="QuizzUrl" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />
                <a asp-action="Index" class="btn btn-default">Voltar Atrás</a>
            </div>
        </form>
    </div>
</div>