@model IEnumerable<CIMOBProject.Models.Quizz>
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Index";
}

<h1>Questionários</h1>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Semester)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QuizzUrl)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semester)
            </td>
            <td>
                <a href="@Html.DisplayFor(modelItem => item.QuizzUrl)">@Html.DisplayFor(modelItem => item.QuizzUrl)</a>
            </td>
            <td>
                <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                @if (item.IsPublished == false) {
                    <a class="btn btn-default" asp-action="Publish" asp-route-id="@item.Id" 
                       asp-route-employeeId ="@UserManager.GetUserId(User)">Publicar</a>
                }                
            </td>
        </tr>
}
    </tbody>
</table>
<br />
<a class="btn btn-default" asp-action="Create">Novo Questionário</a>
