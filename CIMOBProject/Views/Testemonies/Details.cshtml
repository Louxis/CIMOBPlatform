@model CIMOBProject.Models.Testemony
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Detalhes de Testemunho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="recent-news">
    <h1>@Html.DisplayFor(model => model.Title)</h1>
    @Html.DisplayFor(model => model.Content)
    <hr />
    <label>-&nbsp;</label>@Html.DisplayFor(model => model.Student.UserFullname)
</div>
<hr />
<div>
    <a asp-action="Index" class="btn btn-default">Voltar Atrás</a>
    <a class="btn btn-default" asp-controller="Testemonies" asp-action="ValidateTestemony" asp-route-testemonyId="@Model.TestemonyId" asp-route-userId=@UserManager.GetUserId(User)>Validar Publicação</a>
</div>
