@model CIMOBProject.Models.Testemony

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Novo Testemunho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Novo Testemunho</h1>
<h3 class="description">Dê a sua opinião sobre o programa Erasmus. Partilhe a sua experiência com futuros estudantes.</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>  <div class="tooltip">(?)<span class="tooltiptext">@ViewData["TitleTip"]</span></div>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>  <div class="tooltip">(?)<span class="tooltiptext">@ViewData["TextContentTip"]</span></div>
                <textarea asp-for="Content" class="form-control"> </textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            @Html.Hidden("StudentId")
            @Html.Hidden("CreationDate")
            <hr />
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />
                <a asp-action="Index" asp-route-userId=@UserManager.GetUserId(User) class="btn btn-default">Voltar Atrás</a>
            </div>
        </form>
    </div>
</div>
