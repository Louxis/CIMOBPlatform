@model CIMOBProject.Models.Error

@{
    ViewData["Title"] = "Editar Erro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Erro</h1>
<h3 class="description">Erro</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ErrorCode" class="control-label"></label>
                <input asp-for="ErrorCode" class="form-control" />
                <span asp-validation-for="ErrorCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ErrorDescription" class="control-label"></label>
                <input asp-for="ErrorDescription" class="form-control" />
                <span asp-validation-for="ErrorDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar Alterações" class="btn btn-default" />
                <a asp-action="Index" class="btn btn-default">Voltar Atrás</a>
            </div>
        </form>
    </div>
</div>

