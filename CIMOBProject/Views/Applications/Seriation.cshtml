@model IEnumerable<CIMOBProject.Models.Application>

@{
    ViewData["Title"] = "Seriation";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student.UserFullname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.CollegeSubject.College.CollegeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.CollegeSubject.SubjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinalGrade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationStat.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.UserFullname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.CollegeSubject.College.CollegeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.CollegeSubject.SubjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinalGrade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationStat.Name)
                </td>
            </tr>
        }
    </tbody>
</table>
