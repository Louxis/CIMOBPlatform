@model RegisterViewModel
@{
    ViewData["Title"] = "Registar";
}

<h1>@ViewData["Title"]</h1>

<h3 class="description">Preencha os campos em baixo para efetuar o seu registo no sistema.</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="register-login-info">
                <h4>Informações de Login</h4>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="register-personal-info">
                <h4>Informação Pessoal</h4>
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BirthDate"></label>
                    <input asp-for="BirthDate" class="form-control" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserCc"></label>
                    <input asp-for="UserCc" class="form-control" />
                    <span asp-validation-for="UserCc" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="register-address-info">
                <h4>Informação de Morada</h4>
                <div class="form-group">
                    <label asp-for="UserAddress"></label>
                    <input asp-for="UserAddress" class="form-control" />
                    <span asp-validation-for="UserAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostalCode"></label>
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="register-contact-info">
                <h4>Contactos</h4>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="register-school-info">
                <h4>Informações Académicas</h4>
                <div class="form-group">
                    <label asp-for="StudentNumber"></label>
                    <input asp-for="StudentNumber" class="form-control" />
                    <span asp-validation-for="StudentNumber" class="text-danger"></span>
                </div>
                <div id="listCS" class="form-group">
                    <label asp-for="CollegeSubjectId"></label>
                    <select asp-for="CollegeSubjectId" class="form-control"
                            asp-items="@ViewBag.CollegeSubjectId"></select>
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-default">Registar</button>
        </form>
    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}