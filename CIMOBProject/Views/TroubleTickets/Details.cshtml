@model CIMOBProject.Models.TroubleTicket
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>TroubleTicket</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Solved)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Solved)
        </dd>
        <dt>
            Enviado por:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ApplicationUser.UserFullname)
        </dd>
    </dl>
</div>
@if (ViewBag.AnswersList != null)
{
    @foreach (TroubleTicketAnswer item in ViewBag.AnswersList)
    {
        <h5>Resposta</h5>
        <p>Repondido por:</p>
        @Html.DisplayFor(modelItem => item.ApplicationUser.UserFullname)
        <p>Data de Resposta:</p>
        @Html.DisplayFor(modelItem => item.CreationDate)
        <p>Conteúdo</p>
        @Html.DisplayFor(modelItem => item.Content)
    }

}

<div>
    @if (!Model.Solved && User.IsInRole("Employee"))
    {
        <a asp-action="CloseTicket" asp-route-troubleTicketId="@Model.TroubleTicketId" asp-route-applicationUserId="@UserManager.GetUserId(User)">Fechar Ticket</a>
    }
    else
    {
        if (Model.Solved)
        {
            <h6>Ticket Fechado</h6>
        }
    }
    @if (!Model.Solved)
    {
        <a asp-action="Create" asp-controller="TroubleTicketAnswers" asp-route-troubleTicketId="@Model.TroubleTicketId" asp-route-applicationUserId="@UserManager.GetUserId(User)">Nova Resposta</a>
    }

    <a asp-action="Index">Back to List</a>
</div>
