@model IEnumerable<CIMOBProject.Models.TroubleTicket>
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "_IndexPartial";
}

<h4>Trouble Tickets Abertos</h4>
@{ 
    ViewData["OpenTTs"] = Model.Where(t => t.Solved == false);
    ViewData["ClosedTTs"] = Model.Where(t => t.Solved == true);
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                Origem
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Solved)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (TroubleTicket item in ViewBag.OpenTTs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.UserFullname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Solved)
                </td>
                <td>
                    @if (!item.Solved && User.IsInRole("Employee"))
                    {
                        <a class="btn btn-default" asp-action="CloseTicket" asp-route-troubleTicketId="@item.TroubleTicketId" asp-route-applicationUserId="@UserManager.GetUserId(User)">Fechar Ticket</a>
                    }
                    <a class="btn btn-default" asp-action="Details" asp-route-id="@item.TroubleTicketId">Visualizar Trouble Ticket</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />
<hr />
<hr />
