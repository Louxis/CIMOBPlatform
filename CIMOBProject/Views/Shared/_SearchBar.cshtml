@using Microsoft.AspNetCore.Identity
@using CIMOBProject.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User) && User.IsInRole("Employee"))
{
    <form asp-controller="Students" asp-action="Search" method="get">
        <select class="search-options" for="searchType" name="searchType">
            <option value="">Escolha uma opção</option>
            <option value="studentName">Nome do estudante</option>
            <option value="studentNumber">Número do estudante</option>
            <option value="studentCollege">Escola</option>
        </select>

        <input class="search-box" type="text" name="searchString" placeholder="Pesquisa" size="30px"/>

        <input type="submit" class="btn btn-default" value="Pesquisar">
    </form>
}
