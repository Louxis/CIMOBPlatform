@model CIMOBProject.Models.Edital

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Criar Edital</h1>
<h3 class="description">Preencha os campos em baixo para criar um novo Edital.</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.Hidden("EmployeeId")
            <div class="create-edital-dates">
                <h4>Datas</h4>
                <div class="form-group">
                    <label asp-for="OpenDate" class="control-label"></label>
                    <input asp-for="OpenDate" id="OpenDate" class="form-control" />
                    <span asp-validation-for="OpenDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CloseDate" class="control-label"></label>
                    <input asp-for="CloseDate" id="CloseDate" class="form-control" />
                    <span asp-validation-for="CloseDate" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="create-edital-content">
                <h4>Conteúdo</h4>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" id="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TextContent" class="control-label"></label>
                    <textarea asp-for="TextContent" id="TextContent" class="form-control"></textarea>
                    <span asp-validation-for="TextContent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="link-text" class="control-label">Link do documento</label><br />
                    <input id="link-text" type="text" name="link" class="form-control" />
                </div>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Criar Edital" class="btn btn-default" id="EditalSubmit" />
                <a class="btn btn-default" asp-controller="News" asp-action="Index">Voltar Atrás</a>
            </div>
        </form>
    </div>
</div>
